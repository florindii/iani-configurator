// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

// NEW MODELS FOR 3D CONFIGURATOR
model Product3D {
  id              String   @id @default(cuid())
  shopifyProductId String  // Links to Shopify product
  shop            String   // Which shop this belongs to
  name            String
  basePrice       Float    @default(0) // Base price before customizations
  baseModelUrl    String?  // URL to base 3D model (optional - can use Shopify media)
  useShopifyModel Boolean  @default(true) // Use model from Shopify product media
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Virtual Try-On Settings
  tryOnEnabled    Boolean  @default(false) // Enable try-on feature for this product
  tryOnType       String?  // "glasses", "hat", "earrings", "necklace" - type of try-on product

  // Relations
  configurations  ProductConfiguration[]
  colorOptions    ColorOption[]
  materialOptions MaterialOption[]

  @@unique([shopifyProductId, shop])
}

// Color options for a product
model ColorOption {
  id          String   @id @default(cuid())
  product3DId String
  name        String   // "Ocean Blue", "Crimson Red", etc.
  hexCode     String   // "#1E90FF", "#DC143C", etc.
  price       Float    @default(0) // Price for this color (not additional, absolute)
  sortOrder   Int      @default(0) // Display order
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())

  product3D   Product3D @relation(fields: [product3DId], references: [id], onDelete: Cascade)

  @@index([product3DId])
}

// Material/frame options for a product
model MaterialOption {
  id          String   @id @default(cuid())
  product3DId String
  name        String   // "Natural Oak", "Walnut", etc.
  description String?  // "Warm honey tones"
  extraCost   Float    @default(0) // Additional cost for this material
  sortOrder   Int      @default(0)
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())

  product3D   Product3D @relation(fields: [product3DId], references: [id], onDelete: Cascade)

  @@index([product3DId])
}

// Legacy model - keeping for backward compatibility
model CustomizationOption {
  id          String   @id @default(cuid())
  product3DId String
  optionType  String   // "material", "color", "size", etc.
  optionName  String   // "Fabric", "Wood Finish", etc.
  optionValue String   // "Leather", "Oak", etc.
  price       Float?   // Additional price for this option

  @@index([product3DId])
}

model ProductConfiguration {
  id              String   @id @default(cuid())
  product3DId     String
  customerEmail   String?  // For guest checkouts
  shopifyCustomerId String? // For logged-in customers
  configurationData Json   // Store the 3D configuration as JSON
  previewImageUrl String?  // Generated preview image
  totalPrice      Float
  status          String   @default("draft") // "draft", "saved", "ordered"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  product3D       Product3D @relation(fields: [product3DId], references: [id], onDelete: Cascade)
  
  @@index([product3DId])
  @@index([customerEmail])
  @@index([shopifyCustomerId])
}
